local a=game:GetService(\"HttpService\")local b={}do b.Folder=\"FluentSettings\"b.Settings={Theme=\"Dark\",Acrylic=true,Transparency=true,MenuKeybind=\"LeftControl\"}function b:SetFolder(c)self.Folder=c;self:BuildFolderTree()end;function b:SetLibrary(d)self.Library=d end;function b:BuildFolderTree()local e={}local f=self.Folder:split(\"/\")for g=1,#f do e[#e+1]=table.concat(f,\"/\",1,g)end;table.insert(e,self.Folder)table.insert(e,self.Folder..\"/settings\")for h=1,#e do local i=e[h]if not isfolder(i)then makefolder(i)end end end;function b:SaveSettings()writefile(self.Folder..\"/options.json\",a:JSONEncode(b.Settings))end;function b:LoadSettings()local j=self.Folder..\"/options.json\"if isfile(j)then local k=readfile(j)local l,m=pcall(a.JSONDecode,a,k)if l then for h,n in next,m do b.Settings[h]=n end end end end;function b:BuildInterfaceSection(o)assert(self.Library,\"Must set InterfaceManager.Library\")local p=self.Library;local q=b.Settings;b:LoadSettings()local r=o:AddSection(\"Interface\")local s=r:AddDropdown(\"InterfaceTheme\",{Title=\"Theme\",Description=\"Changes the interface theme.\",Values=p.Themes,Default=q.Theme,Callback=function(t)p:SetTheme(t)q.Theme=t;b:SaveSettings()end})s:SetValue(q.Theme)if p.UseAcrylic then r:AddToggle(\"AcrylicToggle\",{Title=\"Acrylic\",Description=\"The blurred background requires graphic quality 8+\",Default=q.Acrylic,Callback=function(t)p:ToggleAcrylic(t)q.Acrylic=t;b:SaveSettings()end})end;r:AddToggle(\"TransparentToggle\",{Title=\"Transparency\",Description=\"Makes the interface transparent.\",Default=q.Transparency,Callback=function(t)p:ToggleTransparency(t)q.Transparency=t;b:SaveSettings()end})local u=r:AddKeybind(\"MenuKeybind\",{Title=\"Minimize Bind\",Default=q.MenuKeybind})u:OnChanged(function()q.MenuKeybind=u.Value;b:SaveSettings()end)p.MinimizeKeybind=u end end;return b
